<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.MasterDetails.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">@dimen/min_text_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textSize">@dimen/font_16x</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="Widget.MasterDetails.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="textColor">?attr/textColor</item>
    </style>

    <style name="Widget.MasterDetails.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/font_16x</item>
        <item name="backgroundColor">@color/teal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/teal</item>
    </style>

    <style name="Widget.MasterDetails.Negative.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">@dimen/font_16x</item>
        <item name="backgroundColor">?attr/themedBackgroundColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal</item>
        <item name="strokeColor">@color/teal</item>
        <item name="backgroundTint">?attr/themedBackgroundColor</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="backgroundColor">?attr/themedBackgroundColor</item>
        <item name="background">?attr/themedBackgroundColor</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation" tools:ignore="NewApi">0dp</item>
    </style>

    <style name="AppTheme.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/font_20x</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
        <item name="backgroundColor">?themedBackgroundColor</item>
        <item name="background">?themedBackgroundColor</item>
        <item name="tint">?themedBackgroundColor</item>
    </style>
</resources>